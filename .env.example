# ===========================================
# FLOWBOARD - Environment Variables Template
# ===========================================

# Rails Environment
RAILS_ENV=development
RAILS_MAX_THREADS=5

# Database Configuration (PostgreSQL)
POSTGRES_USER=flowboard
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Alternative: Use DATABASE_URL (overrides above settings)
# DATABASE_URL=postgresql://flowboard:password@localhost:5432/flowboard_development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Production Only (ne pas remplir en dev)
# SECRET_KEY_BASE=your_secret_key_here
# RAILS_MASTER_KEY=your_master_key_here
